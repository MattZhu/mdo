<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp" >
    <TextView 
        android:id="@+id/oil_name"
        android:layout_width="150dp"
    	android:layout_height="wrap_content"
    	android:textSize="16sp"
    	android:textStyle="bold"
        android:singleLine="true"
        android:textColor="@android:color/black"
    	android:layout_margin="5dp"
    	android:ellipsize="end"
    	android:paddingLeft="15dp"
    	android:paddingStart="15dp"
    	/>
	<TextView 
        android:id="@+id/scientific_name"
        android:layout_width="150dp"
    	android:layout_height="wrap_content"
    	android:layout_below="@id/oil_name"
       	android:textSize="16sp"
    	android:ellipsize="end"
    	android:paddingLeft="15dp"
    	android:paddingStart="15dp"
    	android:textStyle="italic"
		
    android:layout_margin="5dp"
        android:singleLine="true"
    	/>
	<LinearLayout 
		android:layout_width="180dp"
    	android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
	    >
	    <ImageView 
	        android:id="@+id/symbol_a"
	        android:layout_width="22dp"
    		android:layout_height="22dp"
       		android:layout_margin="4dp"
       		android:src="@drawable/aicon"
       		android:visibility="invisible"
	        />
	    <ImageView 
	        android:id="@+id/symbol_t"
	        android:layout_width="22dp"
    		android:layout_height="22dp"
       		android:layout_margin="4dp"
       		android:src="@drawable/ticon"
       		android:visibility="invisible"
	        />
	    <ImageView 
	        android:id="@+id/symbol_i"
	        android:layout_width="22dp"
    		android:layout_height="22dp"
       		android:layout_margin="4dp"
       		android:src="@drawable/iicon"
       		android:visibility="invisible"
	        />
	    <ImageView 
	        android:id="@+id/symbol_n"
	        android:layout_width="22dp"
    		android:layout_height="22dp"
       		android:layout_margin="4dp"
       		android:src="@drawable/nicon"
       		android:visibility="invisible"
	        />
	    <ImageView 
	        android:id="@+id/symbol_s"
	        android:layout_width="22dp"
    		android:layout_height="22dp"
       		android:layout_margin="4dp"
       		android:src="@drawable/sicon"
       		android:visibility="invisible"
	        />
	    <ImageView 
	        android:id="@+id/symbol_d"
	        android:layout_width="22dp"
    		android:layout_height="22dp"
       		android:layout_margin="4dp"
       		android:src="@drawable/dicon"
       		android:visibility="invisible"
	        />
	</LinearLayout>
</RelativeLayout>
